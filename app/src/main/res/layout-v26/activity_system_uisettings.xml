<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_marginTop="16dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            android:titleTextColor="?attr/colorOnPrimary"
            app:title="@string/default_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="?attr/colorSurfaceContainer"
                        android:padding="16dp">

                        <!-- 功能标题 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/StatusBar_Clock_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="16dp" />

                        <!-- 去除黑名单功能 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_StatusBarSeconds_title"
                                    android:textSize="16sp"
                                    android:textColor="?attr/colorOnSurface" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_StatusBarSeconds_Summary"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switch_statusBarDisplay_seconds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!-- 新增：自定义时钟开关选项 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/custom_clock_title"
                                        android:textSize="16sp"
                                        android:textColor="?attr/colorOnSurface" />

                                    <!-- 小提示图标 -->
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginStart="8dp"
                                        android:id="@+id/info_img"
                                        android:src="@drawable/ic_info"
                                        android:contentDescription="@string/tooltip_content_description"
                                        app:tint="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/custom_clock_summary"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switch_custom_clock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <!-- 输入框和保存按钮 -->
                        <!-- 修改后的 ll_customClock 部分 -->
                        <LinearLayout
                            android:id="@+id/ll_customClock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="16dp">

                            <!-- 输入框和保存按钮的水平布局 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <EditText
                                    android:id="@+id/edittext_clock_format"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/clock_format_hint"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                                <Button
                                    android:id="@+id/button_save_clock_format"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/save"
                                    android:layout_marginStart="16dp"
                                    style="?attr/materialButtonOutlinedStyle" />

                            </LinearLayout>

                            <!-- 新增：实时预览TextView -->
                            <TextView
                                android:id="@+id/textview_clock_preview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:text="@string/preview_default" />

                            <!-- 新增：字体大小样式选项 -->
                            <LinearLayout
                                android:id="@+id/ll_text_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_marginTop="16dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/custom_clock_text_size_title"
                                            android:textSize="16sp"
                                            android:textColor="?attr/colorOnSurface" />

                                        <TextView
                                            android:id="@+id/textview_text_size_value"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="16sp"
                                            android:textSize="12sp"
                                            android:textColor="?attr/colorOnSurfaceVariant"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:id="@+id/switch_text_size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <SeekBar
                                    android:id="@+id/seekbar_text_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:max="20"
                                    android:progress="16"
                                    android:min="5" />

                            </LinearLayout>

                            <!-- 新增：字间距样式选项 -->
                            <LinearLayout
                                android:id="@+id/ll_letter_spacing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_marginTop="16dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/custom_clock_letter_spacing_title"
                                            android:textSize="16sp"
                                            android:textColor="?attr/colorOnSurface" />

                                        <TextView
                                            android:id="@+id/textview_letter_spacing_value"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="0.1"
                                            android:textSize="12sp"
                                            android:textColor="?attr/colorOnSurfaceVariant"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:id="@+id/switch_letter_spacing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <SeekBar
                                    android:id="@+id/seekbar_letter_spacing"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:max="20"
                                    android:progress="1" />

                            </LinearLayout>

                            <!-- 新增：字体颜色样式选项 -->
                            <LinearLayout
                                android:id="@+id/ll_text_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_marginTop="16dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/custom_clock_text_color_title"
                                            android:textSize="16sp"
                                            android:textColor="?attr/colorOnSurface" />

                                        <TextView
                                            android:id="@+id/textview_text_color_value"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="#FFFFFFFF"
                                            android:textSize="12sp"
                                            android:textColor="?attr/colorOnSurfaceVariant"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:id="@+id/switch_text_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <!-- 颜色选择器布局 -->
                                <LinearLayout
                                    android:id="@+id/ll_color_picker"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_vertical">

                                    <!-- 颜色预览 -->
                                    <View
                                        android:id="@+id/view_color_preview"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:background="@drawable/color_preview_background"
                                        android:layout_marginEnd="8dp" />

                                    <!-- 颜色选择按钮 -->
                                    <Button
                                        android:id="@+id/button_pick_color"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/pick_color"
                                        style="?attr/materialButtonOutlinedStyle" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- 新增：粗体样式选项 -->
                            <LinearLayout
                                android:id="@+id/ll_text_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/custom_clock_text_bold_title"
                                        android:textSize="16sp"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/custom_clock_text_bold_summary"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/switch_text_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 新增：AOD 功能卡片 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="?attr/colorSurfaceContainer"
                        android:padding="16dp">

                        <!-- 功能标题 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/aod_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="16dp" />

                        <!-- AOD 开关选项 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/aod_enable_title"
                                    android:textSize="16sp"
                                    android:textColor="?attr/colorOnSurface" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/aod_enable_summary"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switch_aod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_refresh"
        app:tint="@android:color/white"
        app:backgroundTint="?attr/colorPrimary" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
