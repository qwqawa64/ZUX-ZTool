<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80FFFFFF"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 步骤提示 -->
        <TextView
            android:id="@+id/step_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步骤提示"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 应用信息 -->
        <TextView
            android:id="@+id/AppName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前应用: "
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ActivityInfo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前Activity: "
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp" />

        <!-- 欢迎文本 -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎使用适配向导，请按照上面步骤提示操作: "
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- 视频播放器布局 -->
        <LinearLayout
            android:id="@+id/video_layout"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:background="@android:color/black">

            <VideoView
                android:id="@+id/tutorial_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- 添加活动布局 -->
        <LinearLayout
            android:id="@+id/add_activities_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/add_activity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加当前活动" />

            <TextView
                android:id="@+id/added_activities_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已添加活动: 无"
                android:textColor="?attr/colorPrimary"
                android:textSize="10sp"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 选项布局 -->
        <LinearLayout
            android:id="@+id/options_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/option_show_embedding_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示嵌入分隔符"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/option_skip_letterbox_display_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过信箱模式显示信息"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/option_skip_multi_window_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过多窗口模式"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/option_show_surface_view_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示SurfaceView背景"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/option_should_pause_primary_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应暂停主活动"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 按钮布局 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一步" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
