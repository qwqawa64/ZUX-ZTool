<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- 统一标题样式 -->
        <TextView
            android:id="@+id/title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homeFragment_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 1. 工作模式要求卡片：强调警告属性，保留红色系配色 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_requirements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            app:cardBackgroundColor="?attr/colorErrorContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_home"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workModeRequirement"
                    android:textColor="?attr/colorOnErrorContainer"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/workModeRequirementDetail"
                    android:textColor="?attr/colorOnErrorContainer"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_module_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="18dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_requirements"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- 卡片标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/environmentState"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- 核心状态区：对勾图标 + "模块已激活"文字 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 对勾图标（需准备一个矢量图，如 ic_check_circle.xml） -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="?attr/colorPrimary"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_module_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/moduleActivated"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 技术参数区：模块版本、Root来源、框架版本 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:spacing="10dp"> <!-- 增加行间距，提升可读性 -->

                    <TextView
                        android:id="@+id/text_module_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_root_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_framework_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 3. 设备与系统信息卡片：优化列表布局，统一对齐方式 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_system_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="18dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_module_status"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 卡片标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deviceInfo"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- 系统信息列表：统一间距+左右对齐优化 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    android:spacing="10dp">

                    <!-- 手机型号 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/deviceCodeName"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_device_model"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placeHolderUnknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- Android版本 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/AndroidVersion"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_android_version"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placeHolderUnknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- 构建版本 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/buildVersion"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_build_version"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placeHolderUnknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- 内核版本 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kernelVersion"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_kernel_version"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placeHolderUnknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- 当前槽位 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/currentSlot"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_current_slot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placeHolderUnknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 底部提示：优化间距，提升可读性 -->
        <TextView
            android:id="@+id/text_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:text="@string/workConditionTip"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_system_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
