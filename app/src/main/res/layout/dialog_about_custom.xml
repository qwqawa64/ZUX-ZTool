<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. 全屏背景层 (底层) -->
    <View
        android:id="@+id/about_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="?attr/colorSurface"
        android:clickable="true"
        android:focusable="true" />

    <!-- 2. 内容层 (上层) -->
    <!-- 新增 ID: about_scroll_view -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/about_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- 新增 ID: about_content_container -->
        <!-- 这一层铺满屏幕，点击它也应该关闭弹窗 -->
        <LinearLayout
            android:id="@+id/about_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="400dp"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- 应用图标 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/about_icon_card"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:alpha="0"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@mipmap/ic_launcher"
                    tools:src="@android:drawable/sym_def_app_icon"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 标题 -->
            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <!-- 版本号 -->
            <TextView
                android:id="@+id/about_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="?attr/colorOutline"
                tools:text="v1.0.0 (100)" />

            <!-- 描述文本 -->
            <TextView
                android:id="@+id/about_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:lineSpacingMultiplier="1.2"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="正在初始化..." />

            <LinearLayout
                android:id="@+id/btn_container_project_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:alpha="0">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_github"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/button_project_homepage"
                    app:icon="@drawable/ic_github_logo"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_credits"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/button_credits"
                    app:icon="@drawable/ic_github_logo"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_container_author_info"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:alpha="0">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_qimian233_coolapk"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/button_qimian233_coolapk"
                    app:icon="@drawable/ic_coolapk_logo"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_wasddestroy_coolapk"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/button_wasddestroy_coolapk"
                    app:icon="@drawable/ic_coolapk_logo"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
