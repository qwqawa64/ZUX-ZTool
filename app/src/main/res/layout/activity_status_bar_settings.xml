<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="16dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:titleTextColor="?attr/colorOnPrimary"
        app:title="状态栏设置" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 状态栏时钟设置 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorSurfaceContainer"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="状态栏时钟设置"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <!-- 状态栏显秒 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="显示秒数"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="在状态栏时钟中显示秒数"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_statusBarDisplay_seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- 自定义时钟 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="自定义时钟格式"
                                    android:textSize="16sp"
                                    android:textColor="?attr/colorOnSurface" />

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="8dp"
                                    android:id="@+id/info_img"
                                    android:src="@drawable/ic_info"
                                    android:contentDescription="提示"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="自定义状态栏时钟的显示格式"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_custom_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- 自定义时钟格式输入区域 -->
                    <LinearLayout
                        android:id="@+id/ll_customClock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp">

                        <!-- 输入框和保存按钮 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/edittext_clock_format"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="输入时钟格式"
                                android:textSize="14sp"
                                android:inputType="text" />

                            <Button
                                android:id="@+id/button_save_clock_format"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="保存"
                                android:layout_marginStart="16dp"
                                style="?attr/materialButtonOutlinedStyle" />

                        </LinearLayout>

                        <!-- 实时预览 -->
                        <TextView
                            android:id="@+id/textview_clock_preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:text="预览: 当前时间" />

                        <!-- 字体大小样式选项 -->
                        <LinearLayout
                            android:id="@+id/ll_text_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="字体大小"
                                        android:textSize="16sp"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:id="@+id/textview_text_size_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="16sp"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/switch_text_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <SeekBar
                                android:id="@+id/seekbar_text_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:max="40" />

                        </LinearLayout>

                        <!-- 字间距样式选项 -->
                        <LinearLayout
                            android:id="@+id/ll_letter_spacing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="字间距"
                                        android:textSize="16sp"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:id="@+id/textview_letter_spacing_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0.1"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/switch_letter_spacing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <SeekBar
                                android:id="@+id/seekbar_letter_spacing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:max="20"
                                android:progress="1" />

                        </LinearLayout>

                        <!-- 字体颜色样式选项 -->
                        <LinearLayout
                            android:id="@+id/ll_text_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="字体颜色"
                                        android:textSize="16sp"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:id="@+id/textview_text_color_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="#FFFFFFFF"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/switch_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <!-- 颜色选择器布局 -->
                            <LinearLayout
                                android:id="@+id/ll_color_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical">

                                <!-- 颜色预览 -->
                                <View
                                    android:id="@+id/view_color_preview"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/color_preview_background"
                                    android:layout_marginEnd="8dp" />

                                <!-- 颜色选择按钮 -->
                                <Button
                                    android:id="@+id/button_pick_color"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="选择颜色"
                                    style="?attr/materialButtonOutlinedStyle" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 粗体样式选项 -->
                        <LinearLayout
                            android:id="@+id/ll_text_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="粗体显示"
                                    android:textSize="16sp"
                                    android:textColor="?attr/colorOnSurface" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="启用时钟文字的粗体显示效果"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switch_text_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 状态栏通知设置 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorSurfaceContainer"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="状态栏通知设置"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <!-- 通知数字大小 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="通知图标数量限制"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="设置状态栏显示的通知图标最大数量"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spinner_notifyNumSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
